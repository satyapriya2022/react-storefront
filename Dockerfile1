# Step 1: Use official Node.js image for building the app
FROM node:18-alpine AS builder

# Set working directory
WORKDIR /app

# Copy package files and install dependencies
COPY package*.json ./
RUN npm ci --prefer-offline --no-audit

# Copy all project files and build the React app
COPY . .
RUN npm run build

# Step 2: Use a lightweight web server to serve the static files
FROM nginx:alpine

# Copy the React build output from the builder stage to nginxâ€™s HTML folder
COPY --from=builder /app/build /usr/share/nginx/html

# Expose port 8083 instead of default 80
EXPOSE 8083

# Replace default nginx config to use port 8083
RUN sed -i 's/listen       80;/listen       8083;/g' /etc/nginx/conf.d/default.conf

# Start nginx
CMD ["nginx", "-g", "daemon off;"]
