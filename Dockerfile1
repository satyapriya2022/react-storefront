# ---- Stage 1: Build React App ----
FROM node:18-alpine AS builder

# Install git because some npm packages depend on it
RUN apk add --no-cache git

# Set working directory
WORKDIR /app

# Copy package files first (for caching)
COPY package*.json ./

# Clean npm cache & reinstall dependencies
RUN npm cache clean --force \
    && rm -rf node_modules package-lock.json \
    && npm install --legacy-peer-deps

# Copy all source files
COPY . .

# Build React app
RUN npm run build

# ---- Stage 2: Run the production app ----
FROM node:18-alpine
WORKDIR /app

# Copy only the built output from builder
COPY --from=builder /app/build ./build

# Install a lightweight web server to serve static files
RUN npm install -g serve

# Expose the app port
EXPOSE 3000

# Start the React app
CMD ["serve", "-s", "build", "-l", "3000"]
